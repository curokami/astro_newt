---
import Layout from '../layouts/Layout.astro';
import { getAbout } from "../lib/newt.ts";

const about = await getAbout();
//console.log("🚀 取得した `about` データ:", about);
---

<Layout title="About Me" description={about?.title || ""}>
  <main class="about-container">
    <section class="about-content">
      <h1 class="about-title">{about?.title || "About Me"}</h1> 
      <article set:html={about?.mongon|| "Loading..."} class="about-body" />
    </section>
    <a href="/" class="back-link">← ホームへ戻る</a>
  </main>
</Layout>